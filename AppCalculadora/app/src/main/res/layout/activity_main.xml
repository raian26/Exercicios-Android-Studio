<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:text=""
        />


    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/limpar"
            style="@style/Operadores_botoes"
            android:background="@color/blue"
            android:text="C"/>

        <TextView
            android:id="@+id/divisao"
            style="@style/Operadores_botoes"
            android:background="@color/blue"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_sete"
            style="@style/Números_botoes"
            android:text="7"/>

        <TextView
            android:id="@+id/numero_oito"
            style="@style/Números_botoes"
            android:text="8"/>

        <TextView
            android:id="@+id/numero_nove"
            style="@style/Números_botoes"
            android:text="9"/>

        <TextView
            android:id="@+id/multiplicacao"
            style="@style/Operadores_botoes"
            android:background="@color/blue"
            android:text="x"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">


        <TextView
            android:id="@+id/numero_quatro"
            style="@style/Números_botoes"
            android:text="4"/>

        <TextView
            android:id="@+id/numero_cinco"
            style="@style/Números_botoes"
            android:text="5"/>

        <TextView
            android:id="@+id/numero_seis"
            style="@style/Números_botoes"
            android:text="6"/>

        <TextView
            android:id="@+id/subtracao"
            style="@style/Operadores_botoes"
            android:background="@color/blue"
            android:text="-"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">


        <TextView
            android:id="@+id/numero_um"
            style="@style/Números_botoes"
            android:text="1"/>

        <TextView
            android:id="@+id/numero_dois"
            style="@style/Números_botoes"
            android:text="2"/>

        <TextView
            android:id="@+id/numero_tres"
            style="@style/Números_botoes"
            android:text="3"/>

        <TextView
            android:id="@+id/soma"
            style="@style/Operadores_botoes"
            android:background="@color/blue"
            android:text="+"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/ponto"
            style="@style/Números_botoes"
            android:text="."/>

        <TextView
            android:id="@+id/numero_zero"
            style="@style/Números_botoes"
            android:text="0"/>

        <ImageView
            android:id="@+id/backspace"
            style="@style/Números_botoes"
            android:src="@drawable/ic_baseline_backspace_24"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/igual"
            style="@style/Operadores_botoes"
            android:background="@color/blue"
            android:text="= "/>

    </LinearLayout>


</LinearLayout>